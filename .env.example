# COPCCA CRM - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ==================================================
# SUPABASE CONFIGURATION (Required)
# ==================================================
# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# ==================================================
# APPLICATION SETTINGS
# ==================================================
# Application name displayed in the UI
VITE_APP_NAME=COPCCA CRM

# Application version
VITE_APP_VERSION=1.0.0

# Environment: development | staging | production
VITE_APP_ENV=development

# ==================================================
# FEATURE FLAGS (Optional)
# ==================================================
# Enable/disable specific features
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_PANEL=false

# ==================================================
# API CONFIGURATION (Optional)
# ==================================================
# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# Request cache duration in milliseconds
VITE_CACHE_DURATION=300000

# ==================================================
# PAYMENT & SUBSCRIPTION (Optional)
# ==================================================
# Stripe public key
VITE_STRIPE_PUBLIC_KEY=

# Subscription plans
VITE_BASIC_PLAN_PRICE_ID=
VITE_PRO_PLAN_PRICE_ID=
VITE_ENTERPRISE_PLAN_PRICE_ID=

# ==================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ==================================================
# Google Analytics
VITE_GA_TRACKING_ID=

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# ==================================================
# EMAIL CONFIGURATION (Optional)
# ==================================================
# Email service provider
VITE_EMAIL_PROVIDER=

# SendGrid API Key
VITE_SENDGRID_API_KEY=

# ==================================================
# DEVELOPMENT SETTINGS
# ==================================================
# Enable React strict mode
VITE_REACT_STRICT_MODE=true

# Enable source maps in production
VITE_PRODUCTION_SOURCE_MAPS=false

# ==================================================
# NOTES
# ==================================================
# - Never commit .env.local to version control
# - Required variables: VITE_SUPABASE_URL, VITE_SUPABASE_ANON_KEY
# - All VITE_ prefixed variables are exposed to the client
# - Restart dev server after changing environment variables
